#!/usr/bin/env node

/**
 * Command line interface of ape-scaffold.
 * This file is auto generated by ape-tmpl.
 */

"use strict";

var program = require('commander'),
    pkg = require('../package'),
    apeScaffold = require('../lib');

program
    .version(pkg['version'])
    .usage('[options] <dest> ')
    .description(pkg['description'])
    .option('-s, --silent', "Disable console logs")
    .option('-f, --force', "Force to generate")
;

program.parse(process.argv);


//=========================
// Run main command
//=========================

apeScaffold.apply(apeScaffold, program.args.concat({
    silent: program.silent,
    force: program.force
}).concat(done));


/** When command done. */
function done(err) {
    if (err) {
        console.error(err);
        process.exit(1);
    } else {
        process.exit(0);
    }
}
