#!/usr/bin/env node

/**
 * Command line interface of ape-scaffold.
 * This file is auto generated by ape-tmpl.
 */

'use strict'

const program = require('commander')
const pkg = require('../package')
const apeScaffold = require('../lib')

program
  .version(pkg[ 'version' ])
  .usage('[options] <dest> ')
  .description(pkg[ 'description' ])
  .option('-s, --silent', 'Disable console logs')
  .option('-f, --force', 'Force to generate')
program.parse(process.argv)

// Run main command
apeScaffold.apply(apeScaffold, program.args.concat({
  silent: program.silent,
  force: program.force})
).catch(handleError)

// Handlers

/** Handle error */
function handleError (err) {
  console.error(err)
  process.exit(1)
}
